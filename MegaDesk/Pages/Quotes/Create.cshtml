                <span asp-validation-for="DeskQuote.DrawersNumber" class="text-danger"></span>
            </div>
           
            
                <div class="form-group">
                    <label asp-for="DeskQuote.surfaceMaterial" class="control-label"></label><br>
                    <select id="js-selectMaterial" asp-for="DeskQuote.surfaceMaterial" asp-items="Model.DesktopMaterials" class="form-control">
                        <option value="">Select desktop material</option>
                    </select>
                    <span asp-validation-for="DeskQuote.surfaceMaterial" class="text-danger"></span>
                <img id="js-showSurfaceMaterial" src="" />
            </div>
            </div>
            
